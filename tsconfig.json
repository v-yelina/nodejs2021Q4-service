{
  "exclude": [
    "./test/**/*",
    "./plugins/**/*",
    "./typings/**/*",
    "./build/**/*" 
  ],
  "include": [
    "./src/**/*.ts"
, "ormconfig.ts"  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",   
    "baseUrl": "./",                               
    "allowJs": false,                                  
    "outDir": "./build",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                           
    "skipLibCheck": true,
    "emitDecoratorMetadata": true, 
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": false                       
  },
  
}

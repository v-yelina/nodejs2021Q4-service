{
  "exclude": [
    "./test/**/*",
    "./plugins/**/*",
    "./typings/**/*",
    "./build/**/*" 
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "allowJs": true,                                  
    "outDir": "./build",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                           
    "skipLibCheck": true                                 
  },
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
}
